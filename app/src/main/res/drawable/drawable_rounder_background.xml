<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="0" android:endColor="@color/color_light_grey_blue" android:startColor="@color/color_light_grey_blue" />

            <corners android:radius="15dp" />
        </shape>
    </item>

    <item>

        <shape android:shape="rectangle">
            <gradient android:angle="0" android:endColor="@color/colorPrimary" android:startColor="@color/colorPrimaryDark" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</selector>
